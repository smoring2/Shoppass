<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="5dp"
   >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_sprod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_productImg"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_fav_productName"
            app:layout_constraintRight_toRightOf="@+id/tv_fav_productName"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_fav_productName"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="product1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_productImg" />

        <TextView
            android:id="@+id/tv_fav_productPrice"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="$ 10"
            android:padding="5dp"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_fav_productName" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</GridLayout>